<div class="row">
  <div class="panel ">
    <div>
      <label>Name</label>
      {{input type="name" value=name class="form-control"}}
    </div>
    <div>
      <label>Description</label>
      {{textarea value=location class="form-control"}}
      <label>group</label>
      {{input value=group class="form-control"}}
